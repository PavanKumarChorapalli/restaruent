<!DOCTYPE html>
<html>
<head>
  <title>Sign In Page</title>
  <link rel="stylesheet" type="text/css" href="signup.css">
</head>
<body>
  <div class="container">
    <h2>Sign In</h2>
    <form id="signInForm" action="/signupsubmit" method="post"> 
      <input type="text" id="username" placeholder="Username" required name="name"><br>
      <input type="password" id="password" placeholder="Password" required name="password"><br>
      <input type="tel" id="mobile" placeholder="Mobile Number" required ><br>
      <input type="email" id="email" placeholder="Email" required name="email"><br>
      <input type="password" id="confirmPassword" placeholder="Confirm Password" required><br>
      <button type="submit">Sign In</button>
    </form>
    <p id="response"></p>
  </div>
  
  <!-- <script src="signup.js"></script> -->
  <% if (alertMessage) { %>
      <script>
        alert('<%- alertMessage %>');
      </script>
  <% } %>
</body>
</html>
